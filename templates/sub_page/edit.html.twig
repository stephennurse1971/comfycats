{% extends 'base.html.twig' %}

{% block title %}Edit: Sub-Page {{ sub_page.title }}{% endblock %}

{% block body %}
    <h1 style="color: red">Edit: Sub-Page {{ sub_page.title }}</h1>

    {{ include('sub_page/_form.html.twig', {'button_label': 'Update'}) }}

    <a class="btn btn-outline-primary btn-sm" href="{{ path('sub_page_index') }}">Return to list</a>

    {{ include('sub_page/_delete_form.html.twig') }}
{% endblock %}

{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#sub_page_content'))
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}
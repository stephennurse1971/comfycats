{% extends 'base.html.twig' %}

{% block title %}{{ sub_page.product.product }} Dynamic Detail{% endblock %}

{% block body %}
    <h1>Product Content - CMS</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sub_page.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ sub_page.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ sub_page.image }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('sub_page_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('sub_page_edit', {'id': sub_page.id}) }}">Edit</a>

    {{ include('sub_page/_delete_form.html.twig') }}
{% endblock %}

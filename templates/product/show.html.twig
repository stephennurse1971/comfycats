{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ product.product }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ product.rank }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ product.comments }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('product_index') }}">Return to list</a>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('product_edit', {'id': product.id}) }}">Edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}

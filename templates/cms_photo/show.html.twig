{% extends 'base.html.twig' %}

{% block title %}CMS Photo{% endblock %}

{% block body %}
    <h1 style="color: red">CMS Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cms_photo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cms_photo.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ cms_photo.photo }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cms_photo.title }}</td>
            </tr>
            <tr>
                <th>TitleFR</th>
                <td>{{ cms_photo.titleFR }}</td>
            </tr>
            <tr>
                <th>TitleDE</th>
                <td>{{ cms_photo.titleDE }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ cms_photo.link }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-info btn-sm" href="{{ path('cms_photo_index') }}">Return to list</a>

    <a class="btn btn-outline-danger" href="{{ path('cms_photo_edit', {'id': cms_photo.id}) }}">Edit</a>

    {{ include('cms_photo/_delete_form.html.twig') }}
{% endblock %}

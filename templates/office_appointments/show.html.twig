{% extends 'base.html.twig' %}

{% block title %}Office Appointments{% endblock %}

{% block body %}
    <h1 style="color: red">Office Appointments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ office_appointment.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ office_appointment.date ? office_appointment.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ office_appointment.time ? office_appointment.time|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('office_appointments_index') }}">Retun to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('app_office_appointments_edit', {'id': office_appointment.id}) }}">Edit</a>

    {{ include('office_appointments/_delete_form.html.twig') }}
{% endblock %}

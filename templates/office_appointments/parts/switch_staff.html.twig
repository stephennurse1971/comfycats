<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-primary btn-sm"
        data-toggle="modal"
        data-target="#officeAppointment{{ office_appointment.id }}{{ employee.id }}">
    <i class="fa fa-arrows-h"></i>
</button>

<!-- Modal -->
<div class="modal fade"
     id="officeAppointment{{ office_appointment.id }}{{ employee.id }}"
     tabindex="-1" role="dialog"
     aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered"
         role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="exampleModalLongTitle">Switch staff
                    member</h5>
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-left">
                {% if FindOfficeAppointmentsByDateAndHour.getListOfOfficeAppointmentsByDateAndHour(date,hour.hour) != NULL %}
                    {% for list in FindOfficeAppointmentsByDateAndHour.getListOfOfficeAppointmentsByDateAndHour(date,hour.hour) %}
                        {% if list.staff != employee %}
                            <a href="{{ path('office_appointments_switch', {id:office_appointment.id, recipient: list.id}) }}"
                               class="btn btn-primary btn-sm">{{ list.staff.fullName }}</a>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>

        </div>
    </div>
</div>
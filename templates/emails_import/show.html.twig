{% extends 'base.html.twig' %}

{% block title %}Imported Email{% endblock %}

{% block body %}
    <h1 style="color: red">Imported Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emails_import.id }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ emails_import.sender }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ emails_import.subject }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ emails_import.body }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ emails_import.date ? emails_import.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('emails_import_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('emails_import_edit', {'id': emails_import.id}) }}">Edit</a>

    {{ include('emails_import/_delete_form.html.twig') }}
{% endblock %}

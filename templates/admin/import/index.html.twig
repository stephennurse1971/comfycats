{% extends 'base.html.twig' %}

{% block title %}Import{% endblock %}

{% block body %}


    <h1 class="text-danger">Import from CSV files</h1>
    <div class="row">
        <div class="col-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-success" type="submit">Import</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>

    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
    <script>
        var selection = $('#selection').attr('data');
        $('#import_importType').val(selection).change();
    </script>
{% endblock %}
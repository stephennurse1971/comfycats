{% extends 'base.html.twig' %}

{% block title %}{{ user.FullName }}{% endblock %}

{% block body %}
    <h1 style="color: red">{{ user.FullName }}</h1>

    <div class="row">
        <div class="col-3">

            <table class="table">
                <tbody>
                <tr>
                    <th>Client Reference</th>
                    <td>{{ user.id }}</td>
                </tr>

                <tr>
                    <th>First Name</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td>{{ user.gender }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Mobile</th>
                    <td>{{ user.mobile }}</td><br>
                    <td>{{ user.mobile2 }}</td><br>
                    <td>{{ user.landline }}</td>
                </tr>
                </tbody>
            </table>

        </div>
        <div class="col-3">

            <table class="table">
                <tbody>
                <tr>
                    <th>Address</th>
                    <td>{{ user.addressStreet }}</td>
                    <td>{{ user.addressCity }}</td>
                    <td>{{ user.addressPostCode }}</td>
                </tr>

                </tbody>
            </table>

        </div>
        <div class="col-3">

            <table class="table">
                <tbody>
                <tr>
                    <th>Notes</th>
                    <td>{{ user.notes|raw }}</td>
                </tr>

                </tbody>
            </table>

        </div>
    </div>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('user_index', {status : 'All'}) }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('user_edit', {'fullName': user.fullName}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}

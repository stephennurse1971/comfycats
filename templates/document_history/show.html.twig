{% extends 'base.html.twig' %}

{% block title %}Document History{% endblock %}

{% block body %}
    <h1 style="color: red">Document History</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document_history.id }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ document_history.notes ? document_history.notes|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ document_history.document }}</td>
            </tr>
            <tr>
                <th>DocumentId</th>
                <td>{{ document_history.documentId }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ document_history.date ? document_history.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document_history_index') }}">Return to list</a>

    <a href="{{ path('document_history_edit', {'id': document_history.id}) }}">Edit</a>

    {{ include('document_history/_delete_form.html.twig') }}
{% endblock %}

<form method="post" action="{{ path('document_history_delete', {'id': document_history.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document_history.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>

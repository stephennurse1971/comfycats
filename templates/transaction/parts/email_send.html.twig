<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal"
        data-target="#emailModal{{ transaction.id }}">
    <i class="fa fa-envelope"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="emailModal{{ transaction.id }}" tabindex="-1"
     aria-labelledby="exampleModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Select Mail Template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-left">
                {% for emailTemplate in emailTemplates %}
                    {% if emailTemplate.service == transaction.service %}
                        <a href="{{ path('send_email',{'templateId':emailTemplate.id,'transactionId':transaction.id}) }}">{{ emailTemplate.stage }}
                            ({{ emailTemplate.name }})</a> <br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>

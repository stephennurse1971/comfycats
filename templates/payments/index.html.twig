{% extends 'base.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}
    <h1 style="color: red">Payments - {{ title }}</h1>
<div class="row">


    <div class="col-lg-12 desktop">
        <table class="table table-desktop">
            <thead>
            <tr>
                <th>Client</th>
                <th>Service</th>
                <th>Date</th>
                <th>Amount</th>
                <th></th>
                <th>Payment ID</th>
                <th>Transaction ID</th>
            </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.transaction.client.fullName }}</td>
                    <td>{{ payment.transaction.service.serviceOffered }}</td>
                    <td data-sort="{{ payment.date ? payment.date|date('Y-m-d') : '' }}">{{ payment.date ? payment.date|date('d-M-y') : '' }}</td>
                    <td style="text-align: right">{{ payment.amount|number_format(2, '.', ',') }}</td>
                    <td></td>
                    <td style="text-align: right">
                        {% if is_granted('ROLE_STAFF') %}
                            <a href="{{ path('payments_edit', {'id': payment.id}) }}">{{ payment.id }}</a>
                        {% else %}
                            {{ payment.id }}
                        {% endif %}
                    </td>
                    <td style="text-align: right;">{{ payment.transaction.id }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <div class="col-12 mobile">
        <table class="table table-mobile">
            <thead>
            <tr>
                <th>Client</th>
                <th>Service</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.transaction.client.fullName }}</td>
                    <td>{{ payment.transaction.service.serviceOffered }}</td>
                    <td data-sort="{{ payment.date ? payment.date|date('Y-m-d') : '' }}">{{ payment.date ? payment.date|date('d-M-y') : '' }}</td>
                    <td style="text-align: right">{{ payment.amount|number_format(2, '.', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

    {% block datatable %}
        <script>
            $(document).ready(function () {
                $('.table-desktop').DataTable({
                    'pageLength': 100,
                    "order": [[0, 'asc'], [1, 'asc'], [2, 'asc']],
                    "paging": true,
                    "searching": true,
                    "bInfo": true
                });
                $('.table-mobile').DataTable({
                    'pageLength': 100,
                    "order": [[0, 'asc'], [1, 'asc'], [2, 'asc']],
                    "paging": false,
                    "searching": false,
                    "bInfo": false
                });
            });
        </script>
    {% endblock datatable %}





    <a class="btn btn-success btn-sm" href="{{ path('payments_new') }}">New</a>
{% endblock %}

